<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:orientation="vertical" 
    android:padding="12dip" 
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/viewVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numbers"
        android:layout_alignBottom="@+id/numbers"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:textColor="#31B404"
        android:text="@string/viewvideo" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/code"
        android:layout_alignBottom="@+id/code"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numbers"
        android:layout_alignBottom="@+id/numbers"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/checkBox1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/viewVideo"
        android:layout_marginRight="3dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />
  
</RelativeLayout>
